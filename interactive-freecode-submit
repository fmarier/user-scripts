#!/bin/sh

if [ "z$1" = "z" ]; then
    echo "Usage: $0 freecode-project-name"
    exit 1;
fi

JOBCARD="`mktemp`"

echo "Release-Focus: <(Minor|Major) (bugfixes|security fixes|feature enhancements)>\nVersion: <insert version number>\n\n<insert release notes>" > $JOBCARD

editor $JOBCARD

freecode-submit --project $1 < $JOBCARD

rm $JOBCARD
